{
  "manifest_version": 3,
  "name": "Airtable Audio Player",
  "version": "1.0",
  "description": "Audio player for Airtable files",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.airtable.com/*",
    "https://*.airtableusercontent.com/*",
    "https://*.amazonaws.com/*"
  ],
  "options_page": "settings.html",
  "action": {
    "default_popup": "popup.html"
  }
}
